@model Budget.Models.Transaction

@{
    ViewBag.Title = "Edit";
    Layout = null;
}
<style>
    .form-group {
        padding-top: 1px !important;
    }
</style>

@using (Html.BeginForm("Edit", "Transactions", new { id = Model.Id }, FormMethod.Post)) {
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Model.Title</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ReconciliationId)
        @Html.HiddenFor(model => model.ReconcilerId)
        @Html.HiddenFor(model => model.HouseholdId)
        @Html.HiddenFor(model => model.ReconciledDate)
        @Html.HiddenFor(model => model.IsReconciled)
        @Html.HiddenFor(model => model.IsVoided)


        <div class="form-group row">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-8 col-md-offset-2">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-8 col-md-offset-2">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Institution, htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-8 col-md-offset-2">
                @Html.EditorFor(model => model.Institution, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Institution, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-8 col-md-offset-2">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @id = "txDate" } })
                @*<input type="datetime" id="txDate" name="Date" value="" class="form-control" />*@
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-8 col-md-offset-2">
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.IsCredit, htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-1 col-md-offset-2 pt-0">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsCredit)
                    @Html.ValidationMessageFor(model => model.IsCredit, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ConfirmationNumber, htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-8 col-md-offset-2">
                @Html.EditorFor(model => model.ConfirmationNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ConfirmationNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.OwnerId, "Originator", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-8 col-md-offset-2">
                @Html.DropDownList("OwnerId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OwnerId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.CategoryId, "Category", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-8 col-md-offset-2">
                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.BudgetPlanCategoryId, "Budget Category", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-8 col-md-offset-2">
                @Html.DropDownList("BudgetPlanCategoryId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.AccountId, "Account", htmlAttributes: new { @class = "control-label col-md-4 text-right" })
            <div class="col-md-8 col-md-offset-2">
                @Html.DropDownList("AccountId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AccountId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<script>
    $(function () {
        $("#txDate").datepicker();
    });
</script>
