@model IEnumerable<Budget.Models.BudgetItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="budgetItems" class="page-layout simple tabbed">
    <!-- HEADER -->
    <div class="page-header bg-secondary text-auto row no-gutters align-items-center justify-content-between p-6">
        <div class="row no-gutters align-items-center">
            <div class="product-image mr-4">
                <img class="img-10vh" src="~/Content/Images/Icons/files 2.png">
            </div>
            <div class="h3">Budget Items</div>
        </div>
        @Html.ActionLink("New Budget Item", "Create", "BudgetItems", null, new { @class = "btn btn-success" })
    </div>
    <!-- / HEADER -->
    <!-- CONTENT -->
    <div class="page-content">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link btn active" id="basic-info-tab" data-toggle="tab" href="#active"
                   role="tab" aria-controls="basic-info-tab-pane" aria-expanded="true">Active</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="active" role="tabpanel" aria-labelledby="basic-info-tab">
                <table id="active-table" class="table dataTable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.AmountActual)</th>
                            <th>@Html.DisplayNameFor(model => model.AmountBudgeted)</th>
                            <th>@Html.DisplayNameFor(model => model.Category.Category)</th>
                            <th>@Html.DisplayNameFor(model => model.Account.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Expense.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Income.Name)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td><a href="/BudgetItems/Details/@item.Id">@Html.DisplayFor(modelItem => item.Name)</a></td>
                                <td>@Html.DisplayFor(modelItem => item.AmountActual)</td>
                                <td>@Html.DisplayFor(modelItem => item.AmountBudgeted)</td>
                                <td>@Html.DisplayFor(modelItem => item.Category.Category)</td>
                                <td>@Html.DisplayFor(modelItem => item.Account.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Expense.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Income.Name)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- / CONTENT -->
    @section scripts{
        <script type="text/javascript" src="~/Content/Template/Fuze/js/apps/dashboard/project.js"></script>
        <script src="~/Content/Template/Fuze/vendor/datatables.net/js/jquery.dataTables.js"></script>
        <script>$("#active-table").DataTable({ "order": [[3, 'desc']] });</script>
    }
</div>
