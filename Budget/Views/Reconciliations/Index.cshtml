@model IEnumerable<Budget.Models.Reconciliation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Account.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Reconciler.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.Created)</th>
            <th>@Html.DisplayNameFor(model => model.ReconciledAmount)</th>
            <th>@Html.DisplayNameFor(model => model.OriginalAmount)</th>
            <th>@Html.DisplayNameFor(model => model.IsDiscrepancy)</th>
            <th>@Html.DisplayNameFor(model => model.Explanation)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Account.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Reconciler.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.Created)</td>
            <td>@Html.DisplayFor(modelItem => item.ReconciledAmount)</td>
            <td>@Html.DisplayFor(modelItem => item.OriginalAmount)</td>
            <td>@Html.DisplayFor(modelItem => item.IsDiscrepancy)</td>
            <td>@Html.DisplayFor(modelItem => item.Explanation)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</tbody>
</table>
